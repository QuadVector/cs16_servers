{
	"compilerOptions": {
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Node",
		"strict": true,
		"jsx": "preserve",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"esModuleInterop": true,
		"lib": [
			"ESNext",
			"DOM"
		],
		"skipLibCheck": true,
		"noEmit": true,
		"outDir": "electron-dist",
		"sourceMap": true
	},
	"include": [
		"src",
		"public"
	],
	"references": [
		{
			"path": "./tsconfig.node.json"
		}
	]
}